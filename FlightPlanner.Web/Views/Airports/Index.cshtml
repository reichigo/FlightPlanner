@model List<FlightPlanner.Web.Models.AirportViewModel>

@{
    ViewData["Title"] = "Airports";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-geo-alt-fill text-primary me-2"></i>Airports</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Add New Airport
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>
        No airports found. <a asp-action="Create">Create your first airport</a>
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var airport in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <span class="badge bg-primary">@airport.Iata</span>
                            @airport.Name
                        </h5>
                        <p class="card-text text-muted">
                            <i class="bi bi-geo me-1"></i>
                            Lat: @airport.Latitude.ToString("F4"), Lon: @airport.Longitude.ToString("F4")
                        </p>
                        <a asp-action="Details" asp-route-id="@airport.Id" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-eye me-1"></i>Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}

