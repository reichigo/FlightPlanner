@model FlightPlanner.Web.Models.CreateFlightViewModel

@{
    ViewData["Title"] = "Plan Flight";
    var airports = ViewBag.Airports as List<FlightPlanner.Web.Models.AirportViewModel> ?? new List<FlightPlanner.Web.Models.AirportViewModel>();
    var aircrafts = ViewBag.Aircrafts as List<FlightPlanner.Web.Models.AircraftViewModel> ?? new List<FlightPlanner.Web.Models.AircraftViewModel>();
}

<h1><i class="bi bi-plus-circle text-primary me-2"></i>Plan New Flight</h1>

<div class="row mt-4">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="OriginAirportId" class="form-label">Origin Airport</label>
                        <select asp-for="OriginAirportId" class="form-select">
                            <option value="">-- Select Origin Airport --</option>
                            @foreach (var airport in airports)
                            {
                                <option value="@airport.Id">[@airport.Iata] @airport.Name</option>
                            }
                        </select>
                        <span asp-validation-for="OriginAirportId" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="DestinationAirportId" class="form-label">Destination Airport</label>
                        <select asp-for="DestinationAirportId" class="form-select">
                            <option value="">-- Select Destination Airport --</option>
                            @foreach (var airport in airports)
                            {
                                <option value="@airport.Id">[@airport.Iata] @airport.Name</option>
                            }
                        </select>
                        <span asp-validation-for="DestinationAirportId" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="AircraftId" class="form-label">Aircraft</label>
                        <select asp-for="AircraftId" class="form-select">
                            <option value="">-- Select Aircraft --</option>
                            @foreach (var aircraft in aircrafts)
                            {
                                <option value="@aircraft.Id">@aircraft.Model (Cruise: @aircraft.CruiseSpeedKts kts, Fuel: @aircraft.FuelBurnPerHourKg kg/h)</option>
                            }
                        </select>
                        <span asp-validation-for="AircraftId" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="DepartureAt" class="form-label">Departure Time (Optional)</label>
                        <input asp-for="DepartureAt" type="datetime-local" class="form-control" />
                        <span asp-validation-for="DepartureAt" class="text-danger"></span>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>Plan Flight
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-info-circle me-2"></i>Flight Planning</h5>
                <p class="small">The system will automatically calculate:</p>
                <ul class="small">
                    <li>Distance between airports using GPS coordinates</li>
                    <li>Fuel consumption based on aircraft specifications</li>
                    <li>Estimated flight duration</li>
                </ul>
                
                @if (!airports.Any())
                {
                    <div class="alert alert-warning small mb-0">
                        <i class="bi bi-exclamation-triangle me-1"></i>
                        No airports available. <a asp-controller="Airports" asp-action="Create">Create airports first</a>
                    </div>
                }
                
                @if (!aircrafts.Any())
                {
                    <div class="alert alert-warning small mb-0 mt-2">
                        <i class="bi bi-exclamation-triangle me-1"></i>
                        No aircrafts available. <a asp-controller="Aircrafts" asp-action="Create">Create aircrafts first</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

