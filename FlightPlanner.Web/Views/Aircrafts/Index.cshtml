@model List<FlightPlanner.Web.Models.AircraftViewModel>

@{
    ViewData["Title"] = "Aircrafts";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>✈️ Aircrafts</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Aircraft
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No aircrafts found. <a asp-action="Create">Create one now</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Model</th>
                        <th>Cruise Speed (kts)</th>
                        <th>Fuel Burn (kg/h)</th>
                        <th>Takeoff Fuel (kg)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var aircraft in Model)
                    {
                        <tr>
                            <td><strong>@aircraft.Model</strong></td>
                            <td>@aircraft.CruiseSpeedKts.ToString("N0") kts</td>
                            <td>@aircraft.FuelBurnPerHourKg.ToString("N2") kg/h</td>
                            <td>@aircraft.TakeoffFuelKg.ToString("N2") kg</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@aircraft.Id" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <p class="text-muted">Total: @Model.Count aircraft(s)</p>
        </div>
    }
</div>

