@model FlightPlanner.Web.Models.CreateAircraftViewModel

@{
    ViewData["Title"] = "Create Aircraft";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">‚úàÔ∏è Create New Aircraft</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Model" class="form-label">Aircraft Model</label>
                            <input asp-for="Model" class="form-control" placeholder="e.g., Boeing 737-800" />
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CruiseSpeedKts" class="form-label">Cruise Speed (knots)</label>
                            <input asp-for="CruiseSpeedKts" class="form-control" type="number" step="0.01" placeholder="e.g., 450" />
                            <span asp-validation-for="CruiseSpeedKts" class="text-danger"></span>
                            <small class="form-text text-muted">Typical cruise speed in knots</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FuelBurnPerHourKg" class="form-label">Fuel Burn Rate (kg/hour)</label>
                            <input asp-for="FuelBurnPerHourKg" class="form-control" type="number" step="0.01" placeholder="e.g., 2500" />
                            <span asp-validation-for="FuelBurnPerHourKg" class="text-danger"></span>
                            <small class="form-text text-muted">Fuel consumption per hour in kilograms</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TakeoffFuelKg" class="form-label">Maximum Takeoff Fuel (kg)</label>
                            <input asp-for="TakeoffFuelKg" class="form-control" type="number" step="0.01" placeholder="e.g., 20000" />
                            <span asp-validation-for="TakeoffFuelKg" class="text-danger"></span>
                            <small class="form-text text-muted">Maximum fuel capacity at takeoff</small>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Create Aircraft
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-3">
                <div class="card">
                    <div class="card-header">
                        <strong>üí° Common Aircraft Examples</strong>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            <li><strong>Boeing 737-800:</strong> 450 kts, 2500 kg/h, 20000 kg</li>
                            <li><strong>Airbus A320:</strong> 447 kts, 2400 kg/h, 18500 kg</li>
                            <li><strong>Boeing 777-300ER:</strong> 490 kts, 7000 kg/h, 145000 kg</li>
                            <li><strong>Cessna 172:</strong> 122 kts, 30 kg/h, 200 kg</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

